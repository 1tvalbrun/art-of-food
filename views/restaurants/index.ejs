<% include ../partials/header %>

 <div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to The Art of Food!</h1>
            <p>Let Creativity Thrive</p>
            <p>
                <a class="btn btn-primary btn-large" href="/restaurants/new">Add New Experience</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap">
        <% restaurants.forEach(function(restaurant){ %>
            <div class="col-med-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= restaurant.image %>">
                    <div class="caption">
                        <h4><%= restaurant.name %></h4>
                    </div>
                    <p>
                        <a href="/restaurants/<%= restaurant._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>
    <div>
 </div>

<% include ../partials/footer %>